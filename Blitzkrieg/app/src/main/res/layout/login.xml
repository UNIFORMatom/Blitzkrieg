<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<TextView
		android:id="@+id/textview1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:background="#1A237E"
		android:text="         OfflinePay"
		android:textSize="40sp"
		android:textStyle="italic"
		android:textColor="#FFFFFF"/>
	<TextView
		android:id="@+id/textview4"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:text="         Enter Username"
		android:textSize="30sp"
		android:textColor="#000000"
		android:translationY="10.0dp"/>
	<EditText
		android:id="@+id/edittext2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:textSize="30sp"
		android:textColor="#000000"
		android:hint="Edit Text"
		android:textColorHint="#607D8B"
		android:translationY="15.0dp"/>
	<TextView
		android:id="@+id/textview3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:text="               Enter PIN"
		android:textSize="30sp"
		android:textColor="#000000"
		android:lines="1"
		android:translationY="35.0dp"/>
	<TextView
		android:id="@+id/textview2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:background="#1A237E"
		android:textSize="50sp"
		android:textColor="#000000"
		android:translationY="280.0dp"/>
	<EditText
		android:id="@+id/edittext1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:textSize="30sp"
		android:textColor="#000000"
		android:hint="Edit Text"
		android:textColorHint="#607D8B"
		android:inputType="numberSigned"
		android:imeOptions="actionDone"
		android:translationY="-50.0dp"/>
	<Button
		android:id="@+id/button1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:background="#0D47A1"
		android:text="LOGIN"
		android:textSize="20sp"
		android:textStyle="bold"
		android:textColor="#FFFFFF"
		android:translationY="-25.0dp"/>
	<Button
		android:id="@+id/button2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:background="#0D47A1"
		android:text="SIGNUP"
		android:textSize="20sp"
		android:textStyle="bold"
		android:textColor="#FFFFFF"
		android:translationY="-20.0dp"/>
</LinearLayout>
